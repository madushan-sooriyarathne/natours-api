    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.13",
    "nodemailer": "^6.4.17",
    "reflect-metadata": "^0.1.13",
